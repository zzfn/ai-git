{
  "name": "ai-git",
  "displayName": "ai-git",
  "description": "git message ",
  "version": "0.1.1",
  "publisher": "ai-git",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zzfn/ai-git.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-git.generateCommitMessage",
    "onView:scm"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Assistant",
      "properties": {
        "aiAssistant.provider": {
          "type": "string",
          "default": "siliconflow",
          "enum": ["siliconflow", "deepseek"],
          "enumDescriptions": [
            "SiliconFlow API",
            "DeepSeek API"
          ],
          "description": "选择 AI 供应商"
        },
        "aiAssistant.siliconflowModel": {
          "type": "string",
          "default": "Pro/deepseek-ai/DeepSeek-V3",
          "enum": ["Pro/deepseek-ai/DeepSeek-V3"],
          "description": "选择 SiliconFlow 模型",
          "when": "config.aiAssistant.provider == 'siliconflow'"
        },
        "aiAssistant.deepseekModel": {
          "type": "string",
          "default": "deepseek-chat",
          "enum": ["deepseek-chat"],
          "description": "选择 DeepSeek 模型",
          "when": "config.aiAssistant.provider == 'deepseek'"
        },
        "aiAssistant.customPrompt": {
          "type": "string",
          "default": "You are a Git commit message generation expert. Please analyze the following code changes and generate a clear, standardized commit message.\nRequirements:\n1. Start with type (feat/fix/docs/style/refactor/perf/test/chore)\n2. Be concise and clear\n3. Use present tense\n\nChanges:\n{diff}",
          "description": "自定义 Commit Message 生成提示词",
          "editPresentation": "multilineText"
        },
        "aiAssistant.language": {
          "type": "string",
          "default": "中文",
          "enum": [
            "中文",
            "English"
          ],
          "description": "设置 AI 助手的响应语言"
        },
        "aiAssistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "设置 AI API Key",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "ai-git.generateCommitMessage",
        "title": "Generate Commit Message",
        "category": "AI Git",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "ai-git.generateCommitMessage",
          "group": "navigation@1",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
